@model TaskZero.Server.Models.Home.TaskIndexViewModel



<div class="col-xs-12 col-md-10 col-md-offset-1">
    <h2 class="hidden-xs text-center">What Are You Up To, Today?</h2>
    <hr/>

    <div class="row">
        <div class="col-xs-12 col-md-4">
            <a role="button" class="btn btn-primary btn-lg" href="@Url.Action("new", "task")">
                add new task ...
            </a>
        </div>
    
        <div class="col-xs-12 col-md-8">
            <div id="task-dashboard">
                @Html.Partial("pv_TaskDashboard")
            </div>           
        </div>
    </div>
</div>

<script>
    $("button[data-action-delete]").click(function (evt) {
        evt.stopPropagation(); var id = $(this).data("action-delete"); if (true) {
            var url = "/task/delete/" + id; Ybq.post(url, "", function (response) {
                if (response.Success) {
                    // Refresh list of tasks
                    Ybq.invoke("/dashboard/tasklist", function (html) { $("#task-dashboard").html(html); });
                }
            });
        }
    })
    $("button[data-action-complete]").click(function (evt) {
        evt.stopPropagation(); var id = $(this).data("action-complete"); if (true) {
            var url = "/task/complete/" + id; Ybq.post(url, "", function (response) {
                if (response.Success) {
                    // Refresh list of tasks
                    Ybq.invoke("/dashboard/tasklist", function (html) { $("#task-dashboard").html(html); });
                }
            });
        }
    })</script>

